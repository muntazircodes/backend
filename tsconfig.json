{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2019",
        "module": "NodeNext",
        "declaration": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "outDir": "build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
    },
    "types":["jest"],
    "files": ["index.d.ts"],
    "include": ["src/**/*.ts", "app.ts"],
    "exclude": ["node_modules"]
}
